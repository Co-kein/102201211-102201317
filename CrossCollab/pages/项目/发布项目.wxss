.container {
  padding: 20px;
  background-color: #f8f8f8; /* 背景颜色 */
  height: 100%; /* 使容器充满可用空间 */
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333; /* 设置标题颜色 */
  text-align: left; /* 左对齐 */
}

.form-item {
  margin-bottom: 20px; /* 增加项目项之间的间距 */
}

.form-input, .picker {
  width: 100%;
  padding: 12px; /* 增加内边距 */
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px; /* 设置输入框字体大小 */
  text-align: left; /* 左对齐 */
}

.picker {
  display: flex; /* 使选择器显示为 Flexbox */
  align-items: left; /* 垂直居中 */
}

.skills-container, .talents-container {
  display: flex;
  align-items: left;
  flex-wrap: wrap; /* 允许换行 */
  margin-top: 10px; /* 增加与上方输入框的间距 */
}

.skill, .talent {
  background-color: #e0e0e0;
  padding: 5px 12px; /* 增加内边距 */
  border-radius: 5px;
  margin-right: 8px; /* 增加右侧间距 */
  margin-bottom: 8px; /* 增加底部间距 */
  font-size: 14px; /* 设置技能和人才字体大小 */
}

.remove-skill, .remove-talent {
  margin-left: 20px;
  color: red;
  cursor: pointer;
}

.button-container {
  display: flex;
  justify-content: space-between;
  margin-top: 30px; /* 增加与上方内容的间距 */
}

.cancel-button, .create-button {
  width: 48%; /* 每个按钮占48%宽度 */
  padding: 12px; /* 增加内边距 */
  border-radius: 5px;
  font-size: 16px; /* 设置按钮字体大小 */
  text-align: center; /* 按钮文字居中 */
}

.cancel-button {
  background-color: #ccc; /* 取消按钮颜色 */
  border: none; /* 去掉边框 */
}

.create-button {
  background-color: #00b26a; /* 创建按钮颜色 */
  color: white; /* 创建按钮字体颜色 */
  border: none; /* 去掉边框 */
  font-weight: bold; /* 加粗按钮文字 */
}
