/* 底部欢迎信息样式 */
.footer-welcome {
  position: fixed; /* 使用fixed定位，让元素固定在屏幕上 */
  bottom: 0;      /* 贴紧底部 */
  left: 0;
  right: 0;       /* 横向占满全屏 */
  background-color: #fff; /* 避免底层内容透出 */
  padding: 20rpx 0;        /* 上下各留20rpx空白 */
  text-align: center;     /* 文字居中显示 */
  font-size: 28rpx;       /* 设置字体大小 */
  color: #666;            /* 设置字体颜色 */
}