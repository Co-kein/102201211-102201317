.container {
  padding: 20px;
  background-color: #f8f8f8;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 10px;
}
.search-input {
  width: 100%;
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
}
.recommendation {
  margin-top: 20px;
}
.recommendation-title {
  font-size: 24px;
  margin-bottom: 10px;
}
.item-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item {
  width: 48%;
  background-color: white;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}
.item-image {
  width: 100%;
  height: 120px;
  border-radius: 8px 8px 0 0;
}
.item-info {
  padding: 10px;
}
.item-title {
  font-size: 18px;
  font-weight: bold;
}
.item-count {
  color: #999;
}
