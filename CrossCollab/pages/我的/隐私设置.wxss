.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  height: 100vh;
}

.header {
  text-align: center;
  padding: 20rpx 0;
  font-size: 40rpx;
  font-weight: bold;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section {
  margin-top: 30rpx;
}

.section-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.info-label {
  font-size: 32rpx;
  color: #333;
}

.switch-control {
  margin-left: 20rpx;
}

.description {
  font-size: 28rpx;
  color: #888;
  margin-top: 10rpx;
}

.radio-group {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
