/* 容器设置 */
.container {
  background-color: #f0f8ff;
  padding: 10px;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.search-input {
  flex: 1;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 8px;
  margin-right: 10px;
}

.search-btn {
  padding: 8px 15px;
  background-color: #0084ff;
  color: white;
  border-radius: 5px;
  border: none;
}

/* 帖子样式 */
.post {
  background-color: white;
  padding: 30px;
  margin-bottom: 20px;
  border-radius: 10px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

/* 帖子头部 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.header-right {
  display: flex;
  flex-direction: column;
}

.name {
  font-weight: bold;
  font-size: 16px;
  margin-bottom: 5px;
}

.time {
  font-size: 12px;
  color: #888;
}

/* 帖子内容 */
.post-content {
  margin-top: 10px;
}

.content-line {
  display: block;
  line-height: 1.6;
  margin-bottom: 5px;
  font-size: 14px;
}
