.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.header {
  padding: 20rpx;
  text-align: center;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.content {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  overflow: auto;
}

.text-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}
