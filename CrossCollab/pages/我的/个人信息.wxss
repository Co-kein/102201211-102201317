/* 使容器填满整个页面 */
.container {
  height: 100vh; /* 设置容器高度为视口高度 */
  padding: 100rpx;
  background-color: #f7f7f7; /* 背景色 */
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #c0392b; /* 红色背景 */
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.profile-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 3rpx solid #ffffff; /* 增加白色边框 */
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.2); /* 增加阴影效果 */
  margin-right: 40rpx;
}

.header-info {
  flex: 1;
}

.nickname {
  font-size: 30rpx; /* 调整字号 */
  font-weight: bold;
  color: #ffffff;
}

.info {
  font-size: 30rpx; /* 调整字号 */
  color: #ffffff;
}

.details {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 120rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
  flex-grow: 1; /* 使详情部分填满剩余空间 */
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #e0e0e0; /* 分隔线 */
}

.detail-item:last-child {
  border-bottom: none; /* 最后一项不显示分隔线 */
}

.label {
  font-size: 25rpx; /* 调整字号 */
  color: #333333; /* 标签颜色 */
}

.value {
  font-size: 24rpx; /* 调整字号 */
  color: #555555; /* 值的颜色 */
}
