.container {
  height: 100vh;
  background-color: #f5f5f5; /* 设置背景颜色为浅灰色 */
  padding: 50rpx; /* 设置容器内边距为40rpx */
}

.progress-section {
  background-image: linear-gradient(to right, #ff7e5f, #feb47b); /* 设置背景为从左到右的渐变色 */
  height: 200rpx; /* 设置高度为200rpx */
  width: 400rpx; /* 设置宽度为400rpx */
  border-radius: 20rpx; /* 设置圆角边框半径为20rpx */
  display: flex; /* 使用flex布局 */
  align-items: center; /* 垂直居中对齐内容 */
  justify-content: center; /* 水平居中对齐内容 */
}

.progress-header {
  color: #fff; /* 设置字体颜色为白色 */
  font-size: 48rpx; /* 设置字体大小为48rpx */
  font-weight: bold; /* 设置字体加粗 */
}

.team-section {
  margin-top: 40rpx; /* 设置顶部外边距为40rpx，以与上方元素分隔 */
}

.section-title {
  font-size: 36rpx; /* 设置标题字体大小为36rpx */
  color: orange; /* 设置标题颜色为橙色 */
  margin-bottom: 10rpx; /* 设置底部外边距为20rpx */
}

.team-member {
  display: flex; /* 使用flex布局 */
  align-items: center; /* 垂直居中对齐内容 */
  margin-bottom: 60rpx; /* 设置底部外边距为20rpx */
  background-color: #fff; /* 设置背景颜色为白色 */
  padding: 20rpx; /* 设置内边距为20rpx */
  border-radius: 10rpx; /* 设置圆角边框半径为10rpx */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 设置阴影效果，增加视觉层次感 */
}

.avatar {
  width: 100rpx; /* 设置头像宽度为100rpx */
  height: 100rpx; /* 设置头像高度为100rpx */
  border-radius: 50%; /* 设置头像为圆形 */
  margin-right: 20rpx; /* 设置右边距为20rpx */
}

.member-info {
  flex: 1; /* 允许此元素占用剩余空间 */
}

.member-name {
  font-size: 32rpx; /* 设置成员姓名字体大小为32rpx */
  color: #333; /* 设置姓名颜色为深灰色 */
}
